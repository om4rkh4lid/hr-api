generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AttendanceLog {
  id         Int       @id @default(autoincrement())
  start      DateTime
  end        DateTime?
  employeeId Int
  employee   Employee  @relation(fields: [employeeId], references: [id]) @ignore
}

enum Weekday {
  SAT
  SUN
  MON
  TUE
  WED
  THU
  FRI
}

model Employee {
  id                 Int             @id @default(autoincrement())
  firstName          String
  middleName         String?
  lastName           String
  directSuperior     Employee?       @relation("EmployeeHierarchy", fields: [directSuperiorId], references: [id])
  directSuperiorId   Int?
  directSubordinates Employee[]      @relation("EmployeeHierarchy")
  user               User            @relation(fields: [userId], references: [id])
  userId             Int             @unique
  daysOff            Weekday[]       @default([FRI, SAT])
  AttendanceLog      AttendanceLog[]
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  employee  Employee?
}
